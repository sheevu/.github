{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "openai/agents": ["lib/shims/openai-agents.ts"]
    }
  },
  "include": ["agents/**/*.ts", "tools/**/*.ts", "scripts/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}
